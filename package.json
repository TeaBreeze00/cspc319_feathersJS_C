{
  "name": "feathers-mcp-server",
  "version": "1.0.0",
  "description": "FeathersJS MCP Server",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "test": "jest --coverage",
    "test:coverage": "jest --coverage --watchman=false",
    "lint": "eslint 'src/**/*.ts'",
    "format": "prettier --write src/ tests/",
    "prepare": "npm run build",
    "generate:embeddings": "ts-node --compiler-options '{\"module\":\"CommonJS\",\"esModuleInterop\":true,\"target\":\"ES2020\"}' scripts/generate-embeddings.ts",
    "ingest:v6": "node scripts/ingest-v6-docs.js"
  },
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^25.2.3",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "eslint": "^9.39.2",
    "jest": "^30.2.0",
    "prettier": "^3.8.1",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@xenova/transformers": "^2.17.2",
    "ajv": "^8.18.0",
    "marked": "^17.0.3"
  }
}
