{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "types": ["node", "jest"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": ["src", "src/knowledge/__tests__"],
  "exclude": ["node_modules", "dist", "tests"]
}